@model Shop.Models.Thing 
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Управление товарами</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2>Добавление товара</h2>
        @using (Html.BeginForm("Create","Home",FormMethod.Post))
        {
            @Html.TextBoxFor(model => Model.Name, new { placeholder = "Наименование"})
            @Html.TextBoxFor(model => Model.Code, new { placeholder = "Артикул" })
            @Html.TextBoxFor(model => Model.Size, new {placeholder = "Размер"})
            @Html.TextBoxFor(model => Model.Color, new { placeholder = "Цвет" })
            @Html.TextBoxFor(model => Model.Descripton, new { placeholder = "Описание" })
            @Html.TextBoxFor(model => Model.Price, new { placeholder = "Стоймость" })
            <input type="submit" value="Добавить"/>
        }
    </div>
    <br />
    <table class="table table-striped table-hover">
        <tr>
            <th>Наименование</th>
            <th>Артикул</th>
            <th>Размер</th>
            <th>Цвет</th>
            <th>Описание</th>
            <th>Стоймость</th>
        </tr>
        @foreach (var t in ViewBag.Things)
        {
    <tr>

        <td>@t.Name</td>
        <td>@t.Code</td>
        <td>@t.Size</td>
        <td>@t.Color</td>
        <td>@t.Descripton</td>
        <td>@t.Price</td>
        <td>@Html.ActionLink("Изменить", "Edit",new {id = @t.Id})</td>
        <td>@Html.ActionLink("Удалить", "Delete", new {id = t.Id})</td>

    </tr>
        }
    </table>
</body>
</html>